<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
  <% if (user) { %>
    <h1>Welcome to the Gamer Reviews, <%= user.username %>!</h1>
    <p>
      <a href="/auth/sign-out">Sign out</a>
    </p>
    <% } else { %>
      <h1>Welcome to the Gamer Reviews, guest.</h1>
      <p>
        <a href="/auth/sign-up">Sign up</a> or
        <a href="/auth/sign-in">Sign in</a>.
      </p>
      <% } %>
      <h1>Game Titles</h1>
    <ul>
        <% games.forEach(game => { %>
          <li><a href="/games/<%= game._id %>"><%= game.name %></a></li>
        <% }) %>
      </ul>

</body>
</html>