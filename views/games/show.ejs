<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= game.name %></h1>
    <h2><%= game.genre %></h2>

    <% game.reviews.forEach(review => { %>
       <p><%= review.username %></p>
        <p><%= review.rating %>/5</p>
        <p><%= review.content %></p>
        <a href="/games/<%= game._id %>/reviews/<%= review._id %>/edit">Edit this review</a>
        <form action="/games/<%= game._id  %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete this review</button>
        </form>    
    <% }) %>

    <form action="/games/<%= game._id %>/reviews" method="POST">
        <label for="content">Review:</label>
        <textarea name="content" id="content" required></textarea>

        <label for="rating">Rating:</label>    
        <input type="number" name="rating" id="rating" min="0" max="5" required>/5

        <button type="submit">Create Review</button>
    </form>
</body>
</html>